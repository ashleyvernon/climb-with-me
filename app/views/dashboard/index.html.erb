<div class="container">
	<div class="row">
		<center><h1>Make a new friend!</h1></center>
			<% @users.each do |user| %>
			<div class="col-md-4">

				<img class="media-object" src="http://placehold.it/125x125" alt="Circular Image">
		        <%= link_to user.name %>
		        <br/>
		        <%= user.gym %>
				<%= link_to "Compose", new_conversation_path, class: "btn btn-default" %>
			</div>
			<% end %>
	</div>
</div>
