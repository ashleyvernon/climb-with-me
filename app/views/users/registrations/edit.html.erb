<div class="row" id="nav_links">
<div class="container">
  <center><h2 id="sign_up_form">Editing my Profile!</h2></center>
  <div class="row">
    <div class="col-lg-4">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :email, :class => "sign_up" %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

        <div class="field">
          <%= f.label :password, :class => "sign_up" %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, :class => "sign_up" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :current_password, :class => "sign_up" %> <i>(current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>
        <br/>
        <%= f.file_field :avatar %>
       <%= image_tag @user.avatar.url(:thumb, :height => 400, :width => 400) %>

    </div>
        <div class="col-md-4">
          <h2 id="sign_up_form">Where do you climb the most?</h2>
            <div class="field">
                <%= f.radio_button(:gym, "gym1") %>
                <%= f.label(:gym, "Planet Granite", :value => "planet granite", :class => "sign_up") %>
              <br/>
            </div>
            <div class="field">
                <%= f.radio_button(:gym, "gym2") %>
                <%= f.label(:gym, "Mission Cliffs", :value => "mission cliffs", :class => "sign_up") %>
              <br/>
            </div>
            <div class="field">
                <%= f.radio_button(:gym, "gym3") %>
                <%= f.label(:gym, "Dogpatch", :value => "dogpatch", :class => "sign_up") %>
            </div>
          </div>

    <div class="col-lg-4">
      <h2 id="sign_up_form">I'm getting stronger!!</h2>
      <hr/>

        <div class="row">
          <div class="col-lg-8 routes">
            <h3 id="sign_up_form">Top Rope</h3>
              <select id="slct1" class="browser-default" name=user[top_rope] onchange="populate(this.id, '">
                <option value="" disabled selected>Choose your option</option>
                <option value="5.8">5.8</option>
                <option value="5.9">5.9</option>
                <option value="5.10a">5.10a</option>
                <option value="5.10b">5.10b</option>
                <option value="3">5.10c</option>
                <option value="3">5.10d</option>
                <option value="3">5.11a</option>
                <option value="3">5.11b</option>
                <option value="3">5.11c</option>
                <option value="3">5.11d</option>
              </select>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 routes">
            <h3 id="sign_up_form">Lead</h3>
              <select id="slct1" class="browser-default" onchange="populate(this.id, '">
                <option value="" disabled selected>Choose your option</option>
                <option value="1">5.8</option>
                <option value="2">5.9</option>
                <option value="3">5.10a</option>
                <option value="3">5.10b</option>
                <option value="3">5.10c</option>
                <option value="3">5.10d</option>
                <option value="3">5.11a</option>
                <option value="3">5.11b</option>
                <option value="3">5.11c</option>
                <option value="3">5.11d</option>
              </select>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 routes">
            <h3 id="sign_up_form">Boulder</h3>
              <select class="browser-default">
                <option value="" disabled selected>Choose your option</option>
                <option value="1">v0</option>
                <option value="2">v1</option>
                <option value="3">v2</option>
                <option value="3">v3</option>
                <option value="3">v4</option>
                <option value="3">v5</option>
                <option value="3">v6</option>
                <option value="3">v7</option>
                <option value="3">v8</option>
                <option value="3">v9</option>
              </select>
          </div>
        </div>
      </div>
    </div>
        <div class="row">
          <div class="actions">
            <center><%= f.submit "Update", class: "btn btn-default submit_profile" %></center>
          </div>
        </div>

<% end %>

<%= link_to "Back", :back, :class => "submit" %>
</div>
</div>


