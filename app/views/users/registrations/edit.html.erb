<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="col-md-6">
    <%= link_to "Back", :back, :class => "submit back" %>
  </div>
  <div class="col-md-6">
    <h2 id="edit_form">Edit Profile</h2>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <div class="field">
        <%= f.label :email, :class => "sign_up" %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      <div class="field">
        <%= f.label :password, :class => "sign_up" %> <i>(leave blank if you don't want to change it)</i>
        <br />
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, :class => "sign_up" %>
        <br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
      <div class="field">
        <%= f.label :current_password, :class => "sign_up" %> <i>(current password to confirm)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>
    </div>

    <div class="col-sm-4" id="middle-column">
      <h5 id="gym_choice">Where do you climb the most?</h5>
      <div class="gym-field">
        <%= f.radio_button(:gym, "Planet Granite") %>
        <%= f.label(:gym, "Planet Granite", :value => "planet granite", :class => "gym") %>
        <br/>
      </div>
      <div class="gym-field">
        <%= f.radio_button(:gym, "Mission Cliffs") %>
        <%= f.label(:gym, "Mission Cliffs", :value => "mission cliffs", :class => "gym") %>
        <br/>
      </div>
      <div class="gym-field">
          <%= f.radio_button(:gym, "Dogpatch") %>
          <%= f.label(:gym, "Dogpatch", :value => "dogpatch", :class => "gym") %>
      </div>
    </div>

    <div class="col-sm-4" id="right-column">
      <h5 class="climb-style">Top Rope</h5>
        <%= f.select(:top_rope, options_for_select([['Choose your option', ''], ['5.8', '5.8'], ['5.9', '5.9'], ['5.10a', '5.10a'], ['5.10b', '5.10b'], ['5.10c', '5.10c'], ['5.10d', '5.10d'], ['5.11a', '5.11a'], ['5.11b', '5.11b'], ['5.11c', '5.11c'], ['5.11d', '5.11d'], ['5.12a', '5.12a'], ['5.12b', '5.12b']])) %>
      <h5 class="climb-style">Lead</h5>
        <%= f.select(:lead, options_for_select([['Choose your option', ''], ['5.8', '5.8'], ['5.9', '5.9'], ['5.10a', '5.10a'], ['5.10b', '5.10b'], ['5.10c', '5.10c'], ['5.10d', '5.10d'], ['5.11a', '5.11a'], ['5.11b', '5.11b'], ['5.11c', '5.11c'], ['5.11d', '5.11d'], ['5.12a', '5.12a'], ['5.12b', '5.12b']])) %>
      <h5 class="climb-style">Boulder</h5>
        <%= f.select(:boulder, options_for_select([['Choose your option', ''], ['v0', 'v0'], ['v1', 'v1'], ['v2', 'v2'], ['v3', 'v3'], ['v4', 'v4'], ['v5', 'v5'], ['v6', 'v6'], ['v7', 'v7'], ['v8', 'v8'], ['v9', 'v9'], ['v10', 'v10'], ['v11', 'v11']])) %>
    </div>
  </div>
  <br/>
  <div class="col-md-12 update">
    <%= f.submit "Update", class: "btn btn-default update_profile" %>
  </div>
  <% end %>
</div>